@using Exam.Entities
@model Examination
@{
    ViewData["Title"] = "İmtahan Yarat";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="LessonId">Dərs Seçin</label>
        <select class="form-control" id="LessonId" name="LessonId">
            @foreach (var lesson in ViewData["Lessons"] as SelectList)
            {
                <option value="@lesson.Value">@lesson.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="StudentId">Şagird Seçin</label>
        <select class="form-control" id="StudentId" name="StudentId">
            @foreach (var student in ViewData["Students"] as SelectList)
            {
                <option value="@student.Value">@student.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ExamDate">İmtahan Tarixi</label>
        <input type="date" class="form-control" id="ExamDate" name="ExamDate" required />
    </div>

    <div class="form-group">
        <label for="Score">Nəticə</label>
        <input type="number" class="form-control" id="Score" name="Score" step="0.1" min="0" max="100" required />
    </div>

    <br />
    <button type="submit" class="btn btn-outline-success">Yadda Saxla</button>
    <a href="@Url.Action("Index", "Examination")" class="btn btn-outline-secondary">Geri</a>
</form>


