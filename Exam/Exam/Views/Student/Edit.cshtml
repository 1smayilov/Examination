@using Exam.Entities
@model Student

@{
    ViewData["Title"] = "Şagirdi Dəyiş";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="FirstName">Adı</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName">Soyadı</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
    </div>

    <div class="form-group">
        <label for="Grade">Sinifi</label>
        <input type="text" class="form-control" id="Grade" name="Grade" value="@Model.Grade" required />
    </div>
    <br />
    <button type="submit" class="btn btn-outline-success">Yadda Saxla</button>
    <a href="@Url.Action("Index", "Student")" class="btn btn-outline-secondary">Geri</a>
</form>
