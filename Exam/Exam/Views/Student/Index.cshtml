@using Exam.Entities
@model IEnumerable<Student>


@{
    ViewData["Title"] = "Şagirdlər";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Sinifi</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Grade</td>
                <td>
                    <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-outline-success">Dəyiş</a> |
                    <form action="@Url.Action("Delete", "Student", new { id = student.Id })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Student")" class="btn btn-outline-primary">Yeni Şagird Yarat</a>
